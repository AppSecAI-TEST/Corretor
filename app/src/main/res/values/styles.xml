<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <!-- Tema base + NoActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Tema base + NoActionBar -->
    <style name="AppTheme.NoActionBar.NavDrawer">

    </style>

    <!-- Email Buttons -->
    <style name="ThemeOverlay.TotalLotesButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">#2095F2</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Email Buttons -->
    <style name="ThemeOverlay.LoteAtualButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">#8AC149</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
